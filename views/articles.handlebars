<div class="container-fluid">

<div class="row">
      
 
  
<!--
loop through database items and display the article titles and links
 -->

<div class="row">
      
  <div class="col-lg-12">

    {{#each articles}}
        <div class="panel panel-info">
          <div class="panel-heading">
            <a href="{{link}}" class="panel-title">{{title}}</a>
          </div>
        <div class="panel-body">
                       
          <h5 class="text-success">Comments:</h5>
                  
<!--loop through comments and display each one-->
            {{#each note}}
                <p> {{body}}
             

<!--input for deleting a comment-->
              <form action="/delete/{{id}}" method="POST">

                <button name="deleteNote" type="submit" class="btn btn-warning">Delete Comment</button>
              </form>
              </p>
              <br />
            {{/each}}
            
                  
<!--input for adding a comment-->
            <form action="/submit/{{id}}" method="POST">
                    
              <textarea name="body" placeholder="Add a new comment"></textarea>
              <br />
              <button name="addNote" type="submit" class="btn btn-info">Submit</button>
            </form>
        </div>
      </div>
          
            {{/each}}

</div>
</div>
</div>